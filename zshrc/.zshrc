new_tmux() {
  # Combine zoxide entries with a custom option
  session_dir=$( (echo "[+] Enter custom path manually"; zoxide query --list) | \
    fzf --height=80% --reverse --border \
        --prompt="Select or enter directory > " \
        --preview 'exa -1 --color=always {} 2>/dev/null | head -n 20' )

  # Exit if nothing selected
  [ -z "$session_dir" ] && return

  # If user chose to enter custom path
  if [[ "$session_dir" == "[+] Enter custom path manually" ]]; then
    read -e -p "Enter full path: " session_dir
    [ -z "$session_dir" ] && return
  fi

  # Normalize path and session name
  session_dir=$(realpath -m "$session_dir" 2>/dev/null)
  session_name=$(basename "$session_dir")

  # Create or attach to tmux session
  if tmux has-session -t "$session_name" 2>/dev/null; then
    if [ -n "$TMUX" ]; then
      tmux switch-client -t "$session_name"
    else
      tmux attach -t "$session_name"
    fi
    notification="tmux attached to $session_name"
  else
    if [ -n "$TMUX" ]; then
      tmux new-session -d -c "$session_dir" -s "$session_name" && tmux switch-client -t "$session_name"
      notification="new tmux session inside TMUX: $session_name"
    else
      tmux new-session -c "$session_dir" -s "$session_name"
      notification="new tmux session: $session_name"
    fi
  fi

  notify-send "$notification"
}




alias tm=new_tmux


